@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement Edit Page</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label class="control-label">Title</label>
                    <input type="text" class="form-control" name="Title" asp-for="Title">
                    
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="text" class="form-control" name="Description" asp-for="Description">    
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="date" class="form-control" name="Date" asp-for="Date">
                </div>
                <button class="btn btn-primary btn-block">Save</button>
            </form>
        </div>
    </div>
</div>