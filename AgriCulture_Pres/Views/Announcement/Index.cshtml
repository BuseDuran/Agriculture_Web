@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcements</h4>
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Edit</th>
                            <th>Enable</th>
                            <th>Disable</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-success">Edit</a></td>
                                @if (!item.Status)
                                {
                                    <td><a href="/Announcement/ChangeStatus/@item.AnnouncementID" class="btn btn-primary" disabled data-coreui-toggle="button" autocomplete="off" >Active</a></td>
                                }
                                else 
                                {
                                    <td><a href="/Announcement/ChangeStatus/@item.AnnouncementID" class="btn btn-primary active" data-coreui-toggle="button" autocomplete="off" aria-pressed="true">Inactive</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Add New Announcement</a>
            </div>
        </div>
    </div>
</div>