@using EntityLayer.Concrete
@model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Image List</h4>
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ImageUrl</td>
                                <td>@item.Title</td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Image/EditImage/@item.ImageID" class="btn btn-outline-success">Edit</a></td>
                            </tr>
                        }
                    </tbody>

                </table>
                <a href="/Image/AddImage" class=" btn btn-outline-info">Add New Image</a>
            </div>
        </div>
    </div>
</div>