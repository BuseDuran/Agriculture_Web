@model EntityLayer.Concrete.Address

@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Address Edit Page</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AddressID)
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <input type="text" class="form-control" placeholder="full address" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description 1</label>
                    <input type="text" class="form-control" placeholder="city/country" asp-for="Description1">
                    <span asp-validation-for="Description1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description 2</label>
                    <input type="email" class="form-control" placeholder="email@gmail.com" asp-for="Description2">
                    <span asp-validation-for="Description2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description 3</label>
                    <input type="tel" class="form-control" inputmode="numeric" itemprop="telephone" placeholder="1112223344" pattern="[0-9]{10}" maxlength="10" asp-for="Description3">
                    <span asp-validation-for="Description3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Map Info</label>
                    <input type="text" class="form-control" asp-for="MapInfo">
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                </div>
                <button class="btn btn-primary btn-block">Save</button>
            </form>
        </div>
    </div>
</div>