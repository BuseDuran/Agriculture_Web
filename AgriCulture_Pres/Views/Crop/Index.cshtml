@using EntityLayer.Concrete
@model List<Crop>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Crops</h4>
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.cropid</td>
                                <td>@item.cropname</td>
                                <td>@item.cropnum</td>
                                <td><a href="/Crop/DeleteCrop/@item.cropid" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Crop/EditCrop/@item.cropid" class="btn btn-outline-success">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Crop/AddCrop" class="btn btn-outline-info">Add New Crop</a>
            </div>
        </div>
    </div>
</div>